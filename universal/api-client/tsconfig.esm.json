{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["./src/**/*.test.*", "./src/test/**/*"],
  "references": [{ "path": "../api-schemas/tsconfig.esm.json" }]
}
