{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "baseUrl": "./src",
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["./src/**/*.test.*"],
  "references": [
    { "path": "../../../universal/core/tsconfig.esm.json" },
    { "path": "../react-native/tsconfig.esm.json" }
  ]
}
